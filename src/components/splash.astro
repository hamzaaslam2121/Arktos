---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import astronautImage from "~/assets/astronaut.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <GitHubCorner />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>

  <div class="call-to-action absolute top-1/2 left-0.5 right-0 z-10 bg-black bg-opacity-0 text-white text-center" style="font-family: 'Gopher', sans-serif; font-style: normal; font-weight: 700;">
   
    <a
      href="tel:+44 07899 819297"  
      class="flex items-center justify-center gap-3 border-0 border-current px-5 py-4"
    >
      <Icon name="mdi:phone" class="phoneicon size-7" />
      <span>Get a  <span class="text-primary"> quote </span> by clicking me to call us at <span class="text-primary">07899 819297</span> or scroll down to get in touch via email!</span>
    </a>
  </div>

  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <Icon name="arknetlogo3" class="text-white" style="width: 300; height: 80px;" />
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-6xl md:text-8xl"
      >
        Deliver items fast.
        <br /> Even
        <br /> faster.
      </div>
    </h2>
    <div
      id="astronaut"
      class="relative w-1/2 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Image
        class="h-full w-full object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="A floating astronaut in a space suit"
      />
    </div>
  </div>
  
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10">
    <a
      href="/quickquote"
      class="get-quote-button text-white px-10 py-4 rounded-full font-bold text-xl hover:opacity-90 transition-all duration-300 flex items-center space-x-3"
    >
      <Icon name="mdi:rocket" class="w-6 h-6" />
      <span>Get Quote</span>
    </a>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  .get-quote-button {
    background: linear-gradient(135deg, #8811f8, #e72a89);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.183);
  }

  .get-quote-button:hover {
    background: linear-gradient(135deg, #6b1dd2, #dc268a);
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
  .call-to-action span {
    font-size: 30px; 
  }
  @media (max-width: 768px) {
    .call-to-action a {
      flex-direction: column-reverse;
      gap: 1rem;
    }
    .call-to-action span {
      font-size: 12px; 
    }
    .call-to-action .phoneicon {
      display: none;
      margin: 0 auto;
    }
    .call-to-action {
      top: -2vh;
      left: 0;
      right: 0;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: center;
      padding: 2rem 1rem;
    }
    #astronaut {
      margin-top: -10000vh;
    }
    .get-quote-button {
      position: fixed;
      bottom: 0vh;
      left: 50%;
      transform: translateX(-50%);
      z-index: 30;
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0% {
        box-shadow: 0 0 0 0 rgba(156, 77, 204, 0.4);
      }
      70% {
        box-shadow: 0 0 0 10px rgba(156, 77, 204, 0);
      }
      100% {
        box-shadow: 0 0 0 0 rgba(156, 77, 204, 0);
      }
    }

    .get-quote-button:hover {
      transform: translateX(-50%) scale(1.05);
    }
  }
</style>