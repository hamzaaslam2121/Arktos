---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import astronautImage from "~/assets/astronaut.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <GitHubCorner />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>

  <div class="call-to-action absolute top-1/5 left-0 right-0 z-10 mt-9 p-4 bg-black bg-opacity-0 text-white text-center" style="font-family: 'Gopher', sans-serif; font-style: normal; font-weight: 700;">
    <a
      href="tel:+44 07899 819297"  
      class="flex items-center justify-center gap-3 border-0 border-current px-5 py-4"
    >
      <Icon name="mdi:phone" class="phoneicon size-7" />
      <span>Get a  <span class="text-primary"> quote </span> by clicking me to call us at <span class="text-primary">07899 819297</span> or scroll down to get in touch via email!</span>
    </a>
  </div>


  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <Icon name="arknetlogo1" class="text-white" style="width: 300; height: 80px;" />
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-6xl md:text-8xl"
      >
        Deliver items fast.
        <br /> Even
        <br /> faster.
      </div>
    </h2>
    <div
      id="astronaut"
      class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Image
        class="h-full w-full object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="A floating astronaut in a space suit"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
  .call-to-action span {
    font-size: 30px; 
  }
  @media (max-width: 768px) { /* Adjust breakpoint as needed */
  .call-to-action { /* Give the div a class for easier targeting */
    top: 70%; /* Adjust positioning for smaller screens */
    padding: 4rem 1rem; /* Reduce padding */
  }
  .call-to-action a {
    flex-direction: column-reverse; /* Stack elements vertically */
    gap: 1rem; /* Space between text and icon */
  }
  .call-to-action span {
    font-size: 20px; 
  }
  .call-to-action .phoneicon { /* Target the icon directly */
    display: block; /* Make sure icon is visible */
    margin: 0 auto; /* Center the icon horizontally */
  }
  
}

</style>
