---
import { getCollection } from "astro:content";
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";

const featuredSites = await getCollection(
  "showcase",
  ({ data }) => "featured" in data,
);
const orderedSites = featuredSites.sort(
  (a, b) => a.data.featured! - b.data.featured!,
);
---

<ContentSection title="Locations" id="showcase">
  <Fragment slot="lead">
    Arknet currently only <span class = "text-primary"> collects </span>in areas around the <span class="text-primary">West Midlands</span> region and deliver to{" "}
