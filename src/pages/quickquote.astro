          priceElement.textContent = 'N/A';
          priceInfo.classList.add('hidden');
          quoteButton.disabled = true;
          quoteButton.classList.add('opacity-50', 'cursor-not-allowed');
        }
      } else {
        priceElement.textContent = 'N/A';
        priceInfo.classList.add('hidden');
        quoteButton.disabled = true;
        quoteButton.classList.add('opacity-50', 'cursor-not-allowed');
      }
    }
    function pingServer() {
